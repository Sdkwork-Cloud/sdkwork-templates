{
  "name": "sdkwork-service-template-typescript",
  "version": "1.0.0",
  "description": "A TypeScript service template with layered architecture (API, Repository, Service)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "typescript",
    "service",
    "template",
    "layered-architecture",
    "api",
    "repository"
  ],
  "author": "Architect",
  "license": "MIT",
  "dependencies": { 
     "${apiProjectName}": "file:../${apiProjectName}",
     "${managerProjectName}": "file:../${managerProjectName}"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.7.4"
  }
}